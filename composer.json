{
    "name": "ui-awesome/html",
    "type": "library",
    "description": "UI Awesome HTML Code Generator for PHP.",
    "keywords": [
        "ui-awesome",
        "html",
        "code-generator",
        "php"
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "enshrined/svg-sanitize": "^0.18",
        "php-forge/awesome-widget": "^0.1.2",
        "ui-awesome/html-attribute": "^0.1",
        "ui-awesome/html-concern": "^0.1",
        "ui-awesome/html-helper": "^0.1",
        "ui-awesome/html-interop": "^0.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "php-forge/support": "^0.1",
        "phpunit/phpunit": "^10.5",
        "roave/infection-static-analysis-plugin": "^1.34",
        "symplify/easy-coding-standard": "^12.1",
        "vimeo/psalm": "^5.20"
    },
    "autoload": {
        "psr-4": {
            "UIAwesome\\Html\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UIAwesome\\Html\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "easy-coding-standard": "ecs check",
        "mutation": [
            "Composer\\Config::disableProcessTimeout",
            "roave-infection-static-analysis-plugin"
        ],
        "psalm": "psalm",
        "test": "phpunit"
    }
}
